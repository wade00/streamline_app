<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default login-panel">
    <div class="panel-heading">
      <h3 class="panel-title">Log in</h3>
    </div>
    <div class="panel-body">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'control-label' %>
            <%= f.text_field :email, class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'control-label' %>
            <%= f.text_field :password, class: 'form-control', autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>

          <hr />

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-warning" %>
          </div>
          <div class="login-links">
            <p>
              New here? Go ahead and <%= link_to "Sign up", new_registration_path(resource_name) %>
            </p>
            <p>
              Forgot your password? <%= link_to "Reset it here", new_password_path(resource_name) %>
            </p>
          </div>
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <% end -%>
      </div>
    </div>
  </div>
</div>
