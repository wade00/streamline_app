<div class="sidebar">
  <nav class="nav">
    <div class="sidebar-link">
      <%= link_to machines_path, class: "sidebar-link" do %>
        <div><%= icon("th-list") %></div>
        <small>My Inventory</small>
      <% end %>
    </div>
    <div class="sidebar-link">
      <%= link_to listings_path, class: "listings-link" do %>
        <div>
          <span class="badge outdated-listing-count">
            <%= render 'layouts/outdated_listings_badge' %>
          </span>
        </div>
        <small>Outdated Listings</small>
      <% end %>
    </div>
    <div class="sidebar-link">
      <%= link_to edit_user_registration_path, class: "sidebar-link" do %>
        <div><%= icon("user") %></div>
        <small>Profile</small>
