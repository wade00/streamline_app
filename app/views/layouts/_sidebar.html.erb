<div class="sidebar">
  <nav class="nav">
    <%= link_to machines_path, class: "sidebar-link" do %>
      <div><%= icon("th-list") %></div>
      <small>My Inventory</small>
    <% end %>
    <%= link_to listings_path, class: "listings-link" do %>
      <div>
        <span class="badge outdated-listing-count"><%= current_user.listings.where(current: false).count %></span>
      </div>
      <small>Outdated Listings</small>
    <% end %>
    <%= link_to new_machine_path, class: "sidebar-link add-machine-link", remote: true do %>
      <div><%= icon("plus") %></div>
      <small>Add Machine</small>
    <% end %>
    <%= link_to edit_user_registration_path, class: "sidebar-link" do %>
      <div><%= icon("user") %></div>
      <small>Profile</small>
    <% end %>
    <%= link_to destroy_user_session_path, class: "sidebar-link", method: "delete" do %>
      <div><%= icon("sign-out") %></div>
      <small>Sign out</small>
    <% end %>
  </nav>
</div>
