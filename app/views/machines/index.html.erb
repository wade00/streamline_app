<div class="row table-container">
  <div class="page-header my-inventory-header">
    <div class="row">
      <h3>
        My Inventory
        <small>(<%= @machines.count %> machines)</small>
      </h3>
      <form class="navbar-form pull-right" role="search">
        <div class="row form-group">
          <input type="text" class="form-control" placeholder="Search my inventory">
        </div>
        <button type="submit" class="btn btn-default"><%= icon('search') %></button>
      </form>
    </div>
    <div class="row">
      <div class="sort-search-header">
        <ul>
          <li>Stock</li>
          <li>Make</li>
          <li>Model</li>
          <li>Type</li>
          <li>Hours</li>
          <li>Price</li>
          <li>Location</li>
        </ul>
      </div>
    </div>
  </div>
  <table class="machine-table table table-hover">
    <tbody>
      <% @machines.each do |machine| %>
        <tr>
          <td>
            <%= link_to "#{machine.stock_number}", edit_machine_path(machine.id) %>
          </td>
          <td>
            <%= link_to "#{machine.make}", edit_machine_path(machine.id) %>
          </td>
          <td>
            <%= link_to "#{machine.machine_model}", edit_machine_path(machine.id) %>
          </td>
          <td>
            <%= link_to "#{machine.machine_type}", edit_machine_path(machine.id) %>
          </td>
          <td>
            <%= link_to "#{machine.hours}", edit_machine_path(machine.id) %>
          </td>
          <td>
            <%= link_to "#{machine.price}", edit_machine_path(machine.id) %>
          </td>
          <td>
            <%= link_to "#{machine.dealership}", edit_machine_path(machine.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
