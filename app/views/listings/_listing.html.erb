<li class="listing-preview">
  <div class="listing-stock-container">
    <strong class="stock-number listing-stock-number pull-left">
      <span class="sorted-by">Stock <span class="sort-stock"><%= listing.machine.stock_number %></span></span>
      <%= listing.machine.make %> <%= listing.machine.machine_model %> <%= listing.machine.machine_type %>
    </strong>
    <span class="listing-show-more pull-right" id="<%= dom_id listing %>"><%= icon('plus-square') %></span>
  </div>

  <div id="<%= "#{dom_id listing}_stats" %>" hidden>
    <small class="listing-stats">
      <strong>Hours: </strong>
      <span class="sort-hours"><%= listing.machine.hours %></span>
    </small>
    <small class="listing-stats">
      <strong>Price: </strong>
      <span class="sort-price"><%= listing.machine.price %></span>
    </small>
    <small class="listing-stats">
      <strong>Location: </strong>
      <span class="sort-location">
        <%= listing.machine.location.city %>, <%= listing.machine.location.state %>
      </span>
    </small>
    <small class="listing-stats">
      <strong>Serial: </strong>
      <span class="sort-serial"><%= listing.machine.serial_number %></span>
    </small>
    <small class="listing-stats listing-description">
      <strong>Description: </strong>
      <%= listing.machine.description %>
    </small>
  </div>
</li>
