<% flash.each do |msg_type, message| %>
  <% alert_type = "" %>
  <% if msg_type == 'success' %>
    <% alert_type = 'success' %>
  <% elsif msg_type == 'error' %>
    <% alert_type = 'danger' %>
  <% elsif msg_type == 'alert' %>
    <% alert_type = 'warning' %>
  <% else msg_type == 'notice' %>
  <% end %>
  <%= content_tag :div, message, class: "alert alert-#{alert_type}", role: "alert" %>
<% end %>
