<% flash.each do |msg_type, message| %>
  <% if msg_type == 'notice' %>
    <%= content_tag :div, message, class: "alert alert-info alert-dismissible", role: "alert" %>
  <% else %>
    <%= content_tag :div, message, class: "alert alert-#{msg_type} alert-dismissible", role: "alert" %>
  <% end %>
<% end %>
